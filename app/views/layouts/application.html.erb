<!DOCTYPE html>
<html>
<head>
  <title>MyFirstApp</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
 <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css");>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
</head>
<body>
<div id="sticky-anchor"></div>
<div id="sticky">
	<!-- Collect the nav links, forms, and other content for toggling -->
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div> <!--end navbar-header -->
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Home', root_path %></li>
        	<li><%=link_to 'Products', products_path %></li>
          <li><%= link_to 'Contact',static_pages_contact_path %></li>
        </ul>
        <ul class ="nav pull-right">
          <li>
            <% if user_signed_in? %>
              <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
            <% else %>
              <%= link_to('Login', new_user_session_path) %>
            <% end %>
          </li>
        </ul>

        <div class="col-sm-3 col-md-3">
        <%= form_tag("/products", method: "get", role: "search", class: "navbar-form") do %>
        <div class="input-group">
            <%= text_field_tag(:q,nil, class: "search form-control",placeholder: 'Enter search term...') %>
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
        <% end %>
        </div>
      </div> <!-- nav -->
    </div> <!-- end nav container-->
  </nav> <!-- end navbar-->
</div>
<% if notice %>
    <p id="notice" class="alert alert-info"><%= notice %>
<% elsif alert %>
    <p id="alert" class="alert alert-info"><%= alert %>
    <button type="button" class="btn btn-default" id="close" onclick="$('.alert').hide();">Close</button></p>
<% end %>


<%= yield %>

<footer class="site-footer">
  &copy; 2016 Tiago Sao Jose
</footer>

</body>
</html>
