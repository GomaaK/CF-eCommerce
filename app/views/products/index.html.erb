

<div class="wrapper">

  <p id="notice"><%= notice %></p>



  <div class="new-product">
    <button class="button"><%= link_to 'New Product', new_product_path %></button>
  </div>
  <h1>Listing Products</h1>


  <% @products.each do |product| %>
    <div class="container col-md-4 col-xs-6" id="container-<%= product.id %>">
      <div class="product-header">
        <h4><%= product.name %></h4>
      </div>
      <div class="description">
        <p><%= product.description %></p>
      </div>
      <div class="color">
        <p><%= product.color %></p>
      </div>
      <div class="image">
        <%=image_tag(product.image_url,class: "img-responsive product-img") %>
      </div>
      <div class="action-buttons">
        <%= link_to 'Show', product %>
      </div>
      <div class="action-buttons">
        <%= link_to 'Edit', edit_product_path(product) %>
      </div>
      <div class="action-buttons">
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>

  <% end %>
  <br>
  <br>
</div>

