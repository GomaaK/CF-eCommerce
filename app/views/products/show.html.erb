<p id="notice"><%= notice %></p>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back to Products', products_path %>
<p>

<div class="container-fluid">
    <div class="content-wrapper">	
		<div class="item-container">	
			<div class="container">	
				<div class="col-md-6">
					<div class="product col-md-6 service-image">
						<center>
							<%= image_tag(@product.image_url) %>
						</center>
					</div>
				</div>					
				<div class="col-md-3">
					<div class="product-title"> <%= @product.name %></div>
					<div class="product-desc"><%= @product.description %></div>
					<div class="product-rating">
					<%if @product.rating_average.present? %>
						<% for i in 1..5 %>
							<% if i <= @product.rating_average.round(0) %>
										<i class="fa fa-star gold"></i>
							<% else %>
								<i class="fa fa-star-o"></i> 
							<% end %>
						<% end %>
					<%else %>
						<i class="fa fa-star-o"></i> <i class="fa fa-star-o"></i> <i class="fa fa-star-o"></i> <i class="fa fa-star-o"></i> <i class="fa fa-star-o"></i> 
					<% end %>
								
					</div>
					<hr>
					<div class="product1-price">â‚¬<%= @product.price %></div>
					<div class="product-stock">In Stock</div>
					<hr>
					<div class="btn-group cart">
						<button type="button" class="btn btn-success">
							Add to cart 
						</button>
					</div>
					<div class="btn-group wishlist">
						<button type="button" class="btn btn-danger">
							Add to wishlist 
						</button>
					</div>
				</div>
			</div> 
		</div>
		<div class="container-fluid">		
			<div class="col-md-12 product-info">
					<ul id="myTab" class="nav nav-tabs nav_tabs">
						
						<li class="active"><a href="#service-one" data-toggle="tab">DESCRIPTION</a></li>
						<li><a href="#service-two" data-toggle="tab">PRODUCT INFO</a></li>
						<li><a href="#service-three" data-toggle="tab">COMMENTS</a></li>
						
					</ul>
				<div id="myTabContent" class="tab-content">
						<div class="tab-pane fade in active" id="service-one">
						 
							<section class="container product-info">
								<p>Will need a new db field</p>
							</section>									  
						</div>
					<div class="tab-pane fade" id="service-two">	
						<section class="container">
							<h3> Product Info </h3>					
						</section>		
					</div>
					<div class="tab-pane fade" id="service-three">
						<section class="container">
							<%if @product.highest_rating_comment.blank? %>
								<p><i>No comments</i></p>
							<% else %>
								<div class="highest-rating-comment">
									<strong><%= @product.highest_rating_comment.body %></strong>
									<% for i in 1..5 %>
										<% if i <= @product.highest_rating_comment.rating  %>
											<i class="fa fa-star gold"></i>
										<% else %>
											<i class="fa fa-star-o"></i> 
										<% end %>
									<% end %>
								</div>
								<% @product.comments.each do |comment| %>
									<% if comment.body != @product.highest_rating_comment.body %>
										<p><%= comment.body %>
											<% for i in 1..5 %>
												<% if i <= comment.rating  %>
													<i class="fa fa-star gold"></i>
												<% else %>
													<i class="fa fa-star-o"></i> 
												<% end %>
											<% end %>
										</p>
									<% end %>
								<% end %>
							<% end %>
						</section>
												
					</div>
				</div>
				<hr>
			</div>
		</div>
	</div>
</div

  





