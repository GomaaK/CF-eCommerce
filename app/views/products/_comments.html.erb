<%if @product.comments.blank? %>
	<p><i>No comments</i></p>
<% else %>
	<% @comments.each do |c| %>
		<div class="row">
			<p>
			    <%= c.user.first_name %> <small><em><%= "#{time_ago_in_words(c.created_at)} ago" %></em></small>
			    <% if signed_in? && current_user.admin? %>
			    <%= link_to ('<span class="glyphicon glyphicon-remove"></span>').html_safe, product_comment_path(c.product, c), method: :delete, data: { confirm: 'Are you sure?' } %>
			   	<% end %>
			</p>
				<p><%= c.body %>
				<div class="rated" data-score="<%= c.rating %>"></div>
				</p>
		</div>
		<% end %>
<% end %>